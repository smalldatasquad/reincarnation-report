

.person-name
    font-size: 2em
    margin-bottom: 20px


#factoids
    margin-bottom: 30px

.factoid
    font-size: 1em

.sup
    font-size: .83em
    vertical-align: super
    margin-right: 5px

.page
    width: 15cm
    min-height: 15cm
    padding: 1cm
    margin: 1cm auto
    border: 1px #D3D3D3 solid
    border-radius: 4px
    background: white
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1)

    .subpage {
        padding: 1cm;
        border: 5px red solid;
        height: 256mm;
        outline: 2cm #FFEAEA solid;
    }

    

@page
    size 8.5in 11in; margin: 2cm

@media print
    body
        background-color: green !important

    .footnote
        border: 10px solid blue
    

